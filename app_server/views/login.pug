extends layout

block content
  .login-grid
     .login-box.login-a     
       .form-wrap
         .tabs
             h3.signup-tab
                 a.active(href='#signup-tab-content') Sign Up
             | &#x9;&#x9;&#x9;
             h3.login-tab
                 a(href='#login-tab-content') Login
         | &#x9;&#x9;
         .tabs-content
             #signup-tab-content.active
                 form.signup-form(action='', method='post')
                     input#user_email.input(type='email', autocomplete='off', placeholder='Email')
                     | &#x9;&#x9;&#x9;&#x9;&#x9;
                     input#user_name.input(type='text', autocomplete='off', placeholder='Username')
                     | &#x9;&#x9;&#x9;&#x9;&#x9;
                     input#user_pass.input(type='password', autocomplete='off', placeholder='Password')
                     | &#x9;&#x9;&#x9;&#x9;&#x9;
                     input.button(type='submit', value='Sign Up')
       
             #login-tab-content
                 form.login-form(action='', method='post')
                     input#user_login.input(type='text', autocomplete='off', placeholder='Email or Username')
                     | &#x9;&#x9;&#x9;&#x9;&#x9;
                     input#user_pass.input(type='password', autocomplete='off', placeholder='Password')
                     | &#x9;&#x9;&#x9;&#x9;&#x9;
                     input#remember_me.checkbox(type='checkbox')
                     | &#x9;&#x9;&#x9;&#x9;&#x9;
                     input.button(type='submit', value='Login')
      
          
